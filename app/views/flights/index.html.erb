<p id="notice"><%= notice %></p>

<h1>Flights</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Departure airport</th>
      <th>Arrival airport</th>
      <th>Business class seats</th>
      <th>Economy class seats</th>
      <th>Duration</th>
      <th>Departure date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.number %></td>
        <td><%= flight.departure_airport %></td>
        <td><%= flight.arrival_airport %></td>
        <td><%= flight.business_class_seats %></td>
        <td><%= flight.economy_class_seats %></td>
        <td><%= flight.duration %></td>
        <td><%= flight.departure_date %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


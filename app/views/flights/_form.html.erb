<%= form_with(model: flight) do |form| %>
  <% if flight.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(flight.errors.count, "error") %> prohibited this flight from being saved:</h2>

      <ul>
        <% flight.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



  <div class="field form-group">
    <label><%= form.label :number %></label>
    <%= form.number_field :number, class:'form-control col-md-4 offset-md-4', style:'text-align: center' %>
  </div>

  <div class="field form-group">
    <%= form.label :departure_airport %>
    <%= form.text_field :departure_airport, class:'form-control col-md-4 offset-md-4', style:'text-align: center' %>
  </div>

  <div class="field form-group">
    <%= form.label :arrival_airport %>
    <%= form.text_field :arrival_airport, class:'form-control col-md-4 offset-md-4', style:'text-align: center' %>
  </div>

  <div class="field form-group">
    <%= form.label :business_class_seats %>
    <%= form.number_field :business_class_seats,class:'form-control col-md-4 offset-md-4', style:'text-align: center' %>
  </div>

  <div class="field form-group">
    <%= form.label :economy_class_seats %>
    <%= form.number_field :economy_class_seats, class:'form-control col-md-4 offset-md-4', style:'text-align: center'%>
  </div>

  <div class="field form-group">
    <%= form.label :duration %>
    <%= form.number_field :duration, class:'form-control col-md-4 offset-md-4', style:'text-align: center'%>
  </div>

  <div class="field form-group">
    <%= form.label :departure_date , class:'form-label'%>
    <%= form.datetime_select :departure_date , class:'form-control col-md-4 offset-md-4', style:'text-align: center'%>
  </div>

  <div class="actions">
    <%= form.submit 'Envoyer', class:'btn btn-success'%>
  </div>
<% end %>
